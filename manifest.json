{
  "name": "__MSG_app_title__",
  "description": "Free, ad-free, open-source simple password generator for chrome",
  "version": "1.0",
  "manifest_version": 3,
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "pwg-logo.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}